{
    "name": "sop/gcm",
    "description": "A PHP library for Galois/Counter Mode encryption with AES.",
    "homepage": "https://github.com/sop/gcm",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "gcm",
        "galois",
        "galois counter mode",
        "aes",
        "aes-gcm",
        "encrypt",
        "decrypt"
    ],
    "authors": [
        {
            "name": "Joni Eskelinen",
            "email": "jonieske@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.2",
        "ext-openssl": "*",
        "ext-hash": "*",
        "ext-gmp": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.2 || ^1.2",
        "phpunit/phpunit": "^8.1 || ^9.3.5"
    },
    "autoload": {
        "psr-4": {
            "Sop\\GCM\\": "lib/GCM/"
        }
    }
}
